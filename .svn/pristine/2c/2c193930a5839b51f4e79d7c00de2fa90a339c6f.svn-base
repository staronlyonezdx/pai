        if(!mm.test($('#gp_market_price').val())) {
			layer.msg("您输入的市场价格式不正确");
            $('.btn_smt').attr('disabled',false);
			return false;
		}
        if($('#gp_sale_price').val() == '') {
            layer.msg("<span style='color:#fff'>请输入销售价</span>",{time:2000});
            $('.btn_smt').attr('disabled',false);
            return false;
