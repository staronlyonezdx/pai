        if($('#cate1').val() == '一级分类') {
            layer.msg("<span style='color:#fff'>请选择分类</span>",{time:2000});
            $('.btn_smt').attr('disabled',false);
            return false;
        }
        if($('#gp_settlement_price').val() == '') {
            layer.msg("<span style='color:#fff'>请输入结算价</span>",{time:2000});
            $('.btn_smt').attr('disabled',false);
            return false;
