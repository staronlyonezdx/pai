            url:"/member/wallet/bindingcard",
            data: {
                m_bankowner: $('#name').val(),
                m_identification: identification,
                m_bank_branch: $('#bank').val(),
                m_bankaccount: $('#card').val()
                // m_bank_phone: $('#phone').val(),
                // verification: $('#code').val()
