            return ['status' => 0, 'msg' => '结算价不可高于市场价80%'];
        }

        if($data['g_starttime'] >= $data['g_endtime'] ){
            return ['status'=>0,'msg'=>'开始时间必须小于结束时间'];
        }
//        if(empty($data['g_starttime'])){
