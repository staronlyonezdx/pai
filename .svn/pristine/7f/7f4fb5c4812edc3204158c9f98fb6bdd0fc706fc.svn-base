     * 创建人 邓赛赛
     */
    public function add_goods($data,$m_id,$g_state = 2){
        Db::startTrans();
        try{
            $files = request()->file('g_img');
            if($files){
                $imgs = $this->uploads("shop",$data['g_img']);
            }else{
                if(!empty($data['g_img']) && is_array($data['g_img']) ){
