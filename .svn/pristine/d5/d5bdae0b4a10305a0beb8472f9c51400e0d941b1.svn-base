{block name="script"}
{include file="common/js_sdk" /}
<script src="__JS__/swiper/swiper-3.3.1.min.js"></script>
<script src="__JS__/mescroll/mescroll.min.js"></script>
<script>
    // 点击返回
    $('.goback').click(function () {
        window.history.back();
    });
    // 轮播图  我想问
    var mySwiper2 = new Swiper('.swiper-container2', {
        slidesPerView: 3,
        spaceBetween: 10,
    })
    // 点击加号，显示
    $('.show_file').click(function () {
        $('.show_file').find('img').toggleClass('active');
        $('.file_wrap').toggleClass('wrap_active')
    })

    // 点击订单


    // 点击全部订单以及我的足迹
    $('.order_title p').click(function () {
        $('.order_title p').removeClass('active');
        $(this).addClass('active')
    })
    // 点击订单
    $('.order_show').click(function(){
        $('.order_wrap').show();
        $('.order_title p').removeClass('active');
        $('.order_title p').eq(0).addClass('active')
    })
    // 点击我的足迹
    $('.order_foot').click(function(){
        $('.order_wrap').show();
        $('.order_title p').removeClass('active');
        $('.order_title p').eq(1).addClass('active')
    })
    // 点击订单列表的x
    $('.order_close').click(function(){
        $('.order_wrap').hide();
    })
</script>

