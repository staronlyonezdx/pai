.bangdingcard_view{
    width:7.5rem;
}
.bangdingcard_tit{
    margin-left:0.3rem;
    margin-right: 0.3rem;
    font-size: 0.24rem;
    color:#aaaaaa;
    padding-top: 0.41rem;
    padding-bottom: 0.23rem;
}
.bangdingcard_list_view{
    width:7.5rem;
    background: #fff;
    border-bottom: 0.01rem solid #f2f2f2;
}
.bangdingcard_list{
    margin-left:0.3rem;
    margin-right: 0.3rem;
    padding-top: 0.3rem;
    padding-bottom: 0.3rem;
}
.bangdingcard_list p{
    font-size: 0.28rem;
    color:#000000;
}
.bangdingcard_list input{
    width:5.39rem;
}
.bangdingcard_yanzhengma{
    position: relative;
}
.bangdingcard_code{
    width:1.69rem;
    height:0.6rem;
    border:0.02rem solid #000000;
    line-height: 0.58rem;
    text-align: center;
    border-radius: 0.3rem;
    position: absolute;
    right:0.3rem;
    top:0.18rem;
    font-size: 0.24rem;
    color:#000000;
    font-weight: 600;
}
.bangdingcard_agreements img{
    width:0.28rem;
    height:0.28rem;
    display: none;
    vertical-align: middle;
}

.bangdingcard_agreements p{
    font-size: 0.24rem;
    color:#555555;
    margin-left: 0.43rem;
    margin-top: 0.4rem;
}
.bangdingcard_agreements p span{
    margin-left: 0.18rem;
    vertical-align: middle;
}
.bangdingcard_agreements p a{
    vertical-align: middle;
}
.bangdingcard_code{
    background: transparent;
}
.bangdingcard_btn{
    width:6.9rem;
    height:0.88rem;
    background-image: linear-gradient(90deg,
    #FFE500 0%,
    #FFED50 100%),
    linear-gradient(
            #FFE500,
            #FFE500);
    border-radius: 0.18rem;
    line-height: 0.88rem;
    text-align: center;
    color:#000000;
    font-size: 0.32rem;
    font-weight: 600;
    margin:0 auto;
    margin-top:0.44rem ;
    border: 0;
    display: block;
}
.bangdingcard_agreements .bangdingcard_radio{
    display: inline-block;
}
.band-ts {
    padding: 0.1rem 0.3rem 0.2rem 0.7rem;
    color: #aaa;
    font-size: 0.24rem;
    background: url(../../image/wallet/ts.png) no-repeat 0.3rem 0.2rem;
    background-size: 0.24rem;
}